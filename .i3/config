# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# change keyboard layout
set $mode_key us (u), (i) us intl, (d) de
mode "$mode_key" {
    bindsym u exec --no-startup-id setxkbmap us && pkill -RTMIN+1 i3blocks && setxkbmap -option "caps:none", mode "default"
    bindsym d exec --no-startup-id setxkbmap de && pkill -RTMIN+1 i3blocks && setxkbmap -option "caps:none", mode "default"
    bindsym i exec --no-startup-id setxkbmap us -variant intl && pkill -RTMIN+1 i3blocks && setxkbmap -option "caps:none", mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Shift+T mode "$mode_key"

# toggle US/German keyboard layout
bindsym $mod+Shift+x exec "bash ~/.i3/toggle-keyboard-layout.sh"
bindsym $mod+apostrophe exec "bash ~/.i3/toggle-keyboard-layout.sh"

# screen lock
bindsym Ctrl+Mod1+l exec "sh ~/.i3/lock.sh"
exec xautolock -time 5 -locker "sh ~/.i3/lock.sh" &

# shutdown menu
set $mode_system System (l)ock, log out/(e)xit i3, (s)uspend, (r)eboot, (p) power-off
mode "$mode_system" {
    bindsym l exec --no-startup-id sh /data/home/mfuog/.i3/lock.sh, mode "default"    
    bindsym e exec --no-startup-id /usr/bin/i3-msg exit, mode "default"
    bindsym s exec --no-startup-id sh /data/home/mfuog/.i3/lock.sh && systemctl suspend, mode "default"
    bindsym r exec --no-startup-id /sbin/shutdown -r now, mode "default"
    bindsym p exec --no-startup-id /sbin/shutdown -P now, mode "default"
    
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+w mode "$mode_system"

# sound volume
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%-
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+

# media keys
bindsym $mod+n exec playerctl next 
bindsym $mod+Shift+n exec playerctl previous 
bindsym $mod+p exec playerctl play-pause 

# screen backlight
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# toggle touchpad
bindsym $mod+Shift+p exec ~/.i3/toggle_touchpad.sh

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
